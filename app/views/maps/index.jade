doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body

    //button.btn-info#updateSpeed SPEED
    //input#inputSpeed(type='text')
    .container
      .row
        .col-sm-3.col-sm-offset-3
          #weatherWrapper
            .panel.panel-warning
              .panel-heading#weatherHeading
                h3 Weather
              .panel-body
                ul.list-group
                  div#weatherImg
                  li.list-group-item Outside Temp
                    span.badge#temp
                  li.list-group-item Wind Direction
                    span.badge#windDir
                  li.list-group-item Wind Speed
                    span.badge#windSpeed
                  li.list-group-item Visibility
                    span.badge#visibility
        .col-sm-3
          #speedWrapper
            button.btn-danger#stopWatch STOP
            #speedControls
              h3 Select Display
              button.activeMeas.btn-success#changeToMPH MPH
              button.btn-info#changeToKnots Knots
              button.btn-success#changeToKPH KPH
            #speedInteger
            canvas#speedGauge

            h3.maxSpeedTitle Max Speed
            #maxSpeed 0
            h3.maxSpeedTitle Tilt
            #tilt 0
       .col-sm-3
         img(src='/img/dev/compass.png')#compass

    div.container(style="perspective: 300;")
    img(src="/img/dev/mario.png" id="imgLogo" class="logo")


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/bootstrap.min.js', type='text/javascript')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/vendor/gauge.min.js')
    script(src='/js/source/map.js')
    script(src='/js/source/compass.js')

